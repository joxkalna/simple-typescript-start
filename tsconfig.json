    "src/practice-typescript/OLD-practice-typescript/policy.ts",
    "src/practice-typescript/OLD-practice-typescript/praises.ts",
    "src/practice-typescript/OLD-practice-typescript/todyaysMenu.ts",
    "src/practice-typescript/OLD-practice-typescript/stringSequence.ts",
    "src/practice-typescript/OLD-practice-typescript/doggyDayCare.ts",
    "src/practice-typescript/OLD-practice-typescript/move.ts",
    "src/practice-typescript/OLD-practice-typescript/older-exercise",
    "src/practice-typescript/OLD-practice-typescript/__test__",
    "fixtures"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}