{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "ES2017",
      "ES2021"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}