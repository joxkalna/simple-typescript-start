{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended" // This overrides ESLint rules for formating issues
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier" // Ensure Prettier plugin is listed
  ],
  "env": {
    "browser": true, // If you're targeting browsers, make sure this is true
    "node": true // If you're also working with Node.js, make this true
  },
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": [
          "log"
        ]
      }
    ],
    "no-undef": "error",
    "no-unused-vars": "warn",
    "semi": [
      "error",
      "never"
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 80,
        "endOfLine": "auto",
        "semi": false,
        "arrowParens": "avoid"
      },
      {
        "usePrettierrc": false
      }
    ]
  }
}
